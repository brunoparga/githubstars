<div id="table-container">
  <% if @repos.empty? %>
    <header id="main-label"><%= "Oops, no starred repositories were found for user #{@username}." %></header>
  <% else %>
    <header id="main-label"><%= @username %>'s starred repositories</header>
    <table>
      <thead>
        <tr>
          <th>Repository</th>
          <th class="description">Description</th>
          <th>Language</th>
          <th class="tags">Tags</th>
          <th>Add tag</th>
        </tr>
      </thead>
      <tbody>
        <% @repos.each do |repo| %>
          <tr>
            <td><%= link_to repo.name, repo.html_url %></td>
            <td class="description"><%= repo.description %></td>
            <td><%= repo.language.downcase || "undefined" %></td>
            <td><%= form_for [repo, @repository_tag] do |f| %>
              <%= hidden_field_tag :repo_ids, @repos.map { |repo| repo.id } %>
              <%= hidden_field_tag :username, @username %>
              <%= text_field_tag :name, "", class: "tag_input" %>
              <%= submit_tag "+" %>
            <% end %></td>
            <td class="tags">
              <% repo.repository_tags.each do |repo_tag| %>
                <div id="repo-tag<%= repo_tag.id %>">
                  <%= repo_tag.name %>&nbsp;<%= link_to "x", repo_tag, method: :delete, remote: true %>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
